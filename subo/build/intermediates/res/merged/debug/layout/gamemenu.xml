<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/gamemenuadcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tomenu"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/music"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/tomenu"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/tomenu2" />

        <TextView
            android:id="@+id/stageText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/biankaungorange"
            android:gravity="center"
            android:shadowColor="#ffaa00"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="主菜单"
            android:textColor="#ffffff" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#aaaaffaa"
        android:checked="true"
        android:text="音效"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex"
        android:layout_alignLeft="@+id/ex"
        android:background="#aaffaaaa"
        android:checked="true"
        android:text="音乐"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/gameMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/orange"
            android:gravity="center"
            android:padding="20dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="第X关"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="36dp" />

        <GridLayout
            android:id="@+id/ratinggrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white"
            android:columnCount="10"
            android:padding="10dp">

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal|fill_vertical"
                android:layout_row="5"
                android:gravity="center"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="评价："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <RatingBar
                android:id="@+id/ratingBar4"
                style="@style/gamesucceedRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_row="5"
                android:isIndicator="true"
                android:max="3"
                android:numStars="3"
                android:stepSize="1" />
        </GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratinggrid"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/resume"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resume"
                    android:layout_toLeftOf="@+id/retry"
                    android:gravity="center"
                    android:shadowColor="#ffaa00"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="继续"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/retry"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/retry" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resume"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:shadowColor="#ffaa00"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="重来"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/next"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/next" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_alignLeft="@+id/imageView1"
                    android:gravity="center"
                    android:shadowColor="#ffaa00"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="下一关"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/randommap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/whitestroke"
            android:padding="5dp"
            android:text="随机地图" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/relativeLayout1"
        android:background="@drawable/whitestroke"
        android:orientation="vertical">

        <Button
            android:id="@+id/choseFileGameMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            android:background="@drawable/orange"
            android:padding="10dp"
            android:shadowColor="#ffaa00"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="本地文件"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/backtostagechoosser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/choseFileGameMenu"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/tomenu"
                android:textColor="#ff0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/biankaungorange"
                android:gravity="center_horizontal"
                android:shadowColor="#ffaa00"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="关卡选择"
                android:textColor="#ffffff" />
        </LinearLayout>

        <Button
            android:id="@+id/choseNetstageGameMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choseFileGameMenu"
            android:layout_margin="10dp"
            android:background="@drawable/qingse"
            android:padding="10dp"
            android:shadowColor="#ffaa00"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="在线关卡"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/getLifeabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:background="@drawable/greenstroke"
        android:orientation="vertical">

        <Button
            android:id="@+id/savemap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/orange"
            android:text=" 保存地图 "
            android:textColor="#ffffff" />

        <RelativeLayout
            android:id="@+id/buyLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:background="@drawable/orange"

            android:padding="3dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/greenrect"
                android:text="买活" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/button1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/chancecostlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:id="@+id/chancecost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/View01"
                        android:layout_toRightOf="@+id/View01"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/View01"
                        android:layout_width="26dp"
                        android:layout_height="26dp"

                        android:background="@drawable/egg" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/goodscostlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/goodscost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/view2"
                        android:layout_toRightOf="@+id/view2"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"

                        android:background="@drawable/coinicon" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/getLifeFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/greenrect"
            android:padding="5dp"
            android:text="免费复活" />
    </LinearLayout>

</RelativeLayout>