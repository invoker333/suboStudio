<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>

            <stroke
                android:width="1dp"
                android:color="#ff555555" />

            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ff777777"
                android:centerY="0.75"
                android:endColor="#ff747674"
                android:startColor="#ff9d9e9d" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <stroke
                    android:width="1dp"
                    android:color="#ff555555" />

                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#a0ff6622"
                    android:centerY="0.5"
                    android:endColor="#55ff0000"
                    android:startColor="#55ff7733" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <!-- 描述：描边 -->

                <stroke
                    android:width="1dp"
                    android:color="#ff555555" />

                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff00ff00"
                    android:centerY="0.5"
                    android:endColor="#ff00ffff"
                    android:startColor="#ffffff00" />
            </shape>
        </clip>
    </item>

</layer-list>